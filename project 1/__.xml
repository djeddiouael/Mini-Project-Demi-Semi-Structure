<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="html" encoding="UTF-8" />

    <xsl:template match="/">
        <html>
            <head>
                <title>Liste des artistes</title>
                <style>
                    body {
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                    background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
                    margin: 0;
                    padding: 40px;
                    color: #f0f0f0;
                    display: flex;
                    justify-content: center;
                    }

                    .container {
                    max-width: 900px;
                    width: 100%;
                    padding: 20px;
                    }

                    h1, h2 {
                    text-align: center;
                    color: #ffffff;
                    margin-bottom: 10px;
                    }

                    h1 {
                    font-size: 28px;
                    font-weight: 700;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    }

                    h2 {
                    font-size: 22px;
                    color: #64ffda;
                    margin-top: 30px;
                    border-left: none;
                    padding-left: 0;
                    }

                    p {
                    font-size: 16px;
                    line-height: 1.6;
                    color: #c0c0c0;
                    margin: 5px 0 15px;
                    text-align: center;
                    }

                    a {
                    color: #00bcd4;
                    text-decoration: none;
                    transition: color 0.3s;
                    }

                    a:hover {
                    color: #1de9b6;
                    text-decoration: underline;
                    }

                    table {
                    width: 100%;
                    margin-top: 20px;
                    border-collapse: collapse;
                    background-color: rgba(255, 255, 255, 0.05);
                    border-radius: 10px;
                    overflow: hidden;
                    }

                    th, td {
                    padding: 12px 15px;
                    text-align: center;
                    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                    color: #f8f8f8;
                    }

                    th {
                    background-color: rgba(255, 255, 255, 0.08);
                    font-weight: 600;
                    color: #80cbc4;
                    }

                    tr:last-child td {
                    border-bottom: none;
                    }

                    strong {
                    color: #ffffff;
                    }
                </style>
            </head>
            <body>
                <h1>developpeur: <strong>
                        <i>Djeddi Ouael</i>
                    </strong></h1>
                <h1>Ma liste d'artistes</h1>
                <xsl:apply-templates select="CD/artiste" />
            </body>
        </html>
    </xsl:template>

    <!-- Template for each artist -->
    <xsl:template match="artiste">
        <h2>NOM: <xsl:value-of select="@nom" /></h2>
        <p>
            <strong>Ville:</strong>
            <xsl:value-of select="@ville" />
        </p>
        <p>
            <strong>Site:</strong>
            <a href="{site/@url}">
                <xsl:value-of select="site/@url" />
            </a>
        </p>
        <p>
            <strong>Productions</strong>
        </p>

        <!-- Check if the artist has albums -->
        <xsl:if
            test="//album[ref-artiste/@ref=current()/@no]">
            <table>
                <tr>
                    <th>NOM Album</th>
                    <xsl:for-each select="//album[ref-artiste/@ref=current()/@no]">
                        <th>
                            <xsl:value-of select="titre" />
                        </th>
                    </xsl:for-each>
                </tr>
                <tr>
                    <td>Chanson</td>
                    <xsl:for-each select="//album[ref-artiste/@ref=current()/@no]">
                        <td>
                            <xsl:for-each select="chansons/chanson">
                                <xsl:value-of select="." /><br />
                            </xsl:for-each>
                        </td>
                    </xsl:for-each>
                </tr>
            </table>
        </xsl:if>
    </xsl:template>

</xsl:stylesheet>